{% extends "frontend/template.html.twig" %}

{% block head %}
    <meta charset="utf-8"/>
    <title> contact </title>

{% endblock %}

{% block body %}
    <div class="global-container">

        <div class="container container-white mt-3 mb-3 rounded pt-2 pb-2">
            <div>

                <h2>Formulaire de contact</h2>

            </div>
            <form action="/sendmessage" method="post">
                <div>
                    <input type="hidden" id="action" name="action" value="createMessage"/>
                </div>

                <div class="text-left mb-3">
                    <label for="first_name">Votre nom</label><br/>
                    <input id="first_name" name="first_name" class="form-control"/>
                </div>
                <div class="text-left mb-3">
                    <label for="surname">Votre prénom</label><br/>
                    <input id="surname" name="surname" class="form-control"/>
                </div>

                <div class="text-left mb-3">
                    <label for="email">email</label><br/>
                    <input id="email" name="email" class="form-control">
                </div>
                <div class="text-left mb-3">
                    <label for="tel">téléphone</label><br/>
                    <input id="tel" name="tel" class="form-control">
                </div>
                <div class="text-left mb-3">
                    <label for="object">Motif</label><br/>
                    <input id="object" name="object" class="form-control"/>
                </div>

                <div class="text-left mb-3">
                    <label for="message">Votre message</label><br/>
                    <textarea id="message" name="message" class="form-control"></textarea>
                </div>
                <div class="text-left">
                    <button class="btn btn-success mt-2" type="submit">envoyer</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}