{% extends "frontend/template.html.twig" %}

{% block head %}

    <title>recherche</title>

{% endblock %}

{% block body %}

    <div class="ml-2 mt-2">
        <button type="button" class="btn btn-light" onclick="window.history.back();" >Page Précédente</button>
    </div>
    <div class="global-container">
        <div class="container container-white rounded mt-3 mb-3">

            <div class="container-white mt-5 rounded ">
                <div class=" container">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th style="width:15%" scope="col">Date de publication</th>
                            <th style="width:15%" scope="col">Type</th>
                            <th style="width:60%" scope="col">Titre</th>
                            <th style="width:60%" scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for annonce in annonces %}
                            <tr>
                                <td>le {{ annonce.creationdate|date("d/m/Y h:m") }}</td>
                                <td>{{ annonce.typeof }}</td>
                                <td class="text-dark " href="/annonces/{{ annonce.id }}">{{ annonce.title|escape }}</td>
                                <td><a class=" btn btn-info mb-1 mt-1 ml-1 " href="/annonces/{{ annonce.id }}">Consulter l'annonce</a></td>
                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block footer %}

{% endblock %}
