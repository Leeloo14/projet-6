{% extends "frontend/template.html.twig" %}

{% block head %}
    <meta charset="utf-8"/>
    <title>Connexion</title>
{% endblock %}

{% block body %}
    <div class="ml-2 mt-2">
        <button type="button" class="btn btn-light" onclick="window.history.back();" >Page Précédente</button>
    </div>
    <div class="wrapper ">
        <form class="form-signin rounded" method="POST" action="/user">
            <h2 class="form-signin-heading">Connexion</h2>
            <input type="email" class="form-control mb-2" name="mailconnect" placeholder="Mail" required="" autofocus="" />
            <input type="password" class="form-control mb-2" name="mdpconnect" placeholder="Mot de passe" required=""/>
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="formconnect">Se connecter</button>
        </form>
        {% if hasFormError %}
            <div class="text-danger">Identifiants incorrects</div>
        {% endif %}
    </div>
{% endblock %}
