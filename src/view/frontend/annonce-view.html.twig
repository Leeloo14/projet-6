{% extends "frontend/template.html.twig" %}

{% block head %}
    <title>Annonces publiées</title>
{% endblock %}

{% block body %}
    <div class="global-container">
        <div class="ml-2 mt-3">
            <p><a class="text-white" href="index.php">Retour à l'accueil</a></p>
        </div>

        <div class="container container-white pt-3 pb-3 rounded ">

            <h3 class="text-center">
                {{ annonce.title|escape }}
            </h3>

            <h6>Publiée par <span class="font-italic">{{ annonce.author|raw }}</span>
                <p class="font-italic">Le {{ annonce.creationDate|date("d/m/Y") }}</p>
                <p class="text-right">localisation: {{ annonce.city|raw }}</p> </h6>


            <div class="pt-3 border">
                <p>
                    {{ annonce.content|raw }}
                </p>
            </div>

            <button type="button" class="btn btn-primary btn-lg mt-3" data-toggle="modal" data-target="#myModal">
                Contacter
            </button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                        
                            <h4 class="modal-title" id="myModalLabel">Coordonnées du particulier</h4>
                        </div>
                        <div class="modal-body">
                            Tel: {{ annonce.tel|raw }}
                           <p> Email: {{ annonce.email|raw }}</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>

                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>

{% endblock %}


{% block footer %}

{% endblock %}
