{% extends "frontend/template.html.twig" %}

{% block head %}

    <title>propose</title>

{% endblock %}

{% block body %}

    <div class="responsive-table-line container-white mt-5 " style="margin:0px auto;max-width:700px;">
        <table class="table table-bordered table-condensed table-body-center" >
            <thead>
            <tr>
                <th>Date de publication</th>
                <th>Type</th>
                <th>Titre</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for annonce in annonces %}
                <tr>
                    <td>le {{ annonce.creationdate|date("d/m/Y h:m") }}</td>
                    <td>{{ annonce.typeof }}</td>
                    <td class="text-dark " href="/annonces/{{ annonce.id }}">{{ annonce.title|escape }}</td>
                    <td><a class=" btn btn-info mb-1 mt-1 ml-1 " href="/annonces/{{ annonce.id }}">Consulter l'annonce</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}


