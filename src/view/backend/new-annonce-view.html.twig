{% extends "backend/template2.html.twig" %}

{% block head %}
    <meta charset="utf-8"/>
    <title> creer une annonce </title>

{% endblock %}

{% block body %}

    <div class="global-container container-white container text-center mt-3 rounded">
            <div>

                <h2 class="pl-2">créer une nouvelle annonce</h2>

            </div>
            <form class="pl-2" action="/addannonce" method="post" enctype="multipart/form-data" >
                <div>
                    <input type="hidden" id="action" name="action" value="createAnnonce"/>
                </div>
                <div class="text-left mb-3 mr-2">
                    <label for="author">Votre nom</label><br/>
                    <input id="author" name="author" class="form-control "/>
                </div>

                <div class="text-left mb-3 mr-2">
                    <label for="typeof">type</label><br/>
                    <select id="typeof" name="typeof" class="form-control">
                        <option value="recherche">Je recherche</option>
                        <option value="propose">Je propose</option>
                    </select>
                </div>
                <div class="text-left mb-3 mr-2">
                    <label for="title">titre</label><br/>
                    <input type="text" id="title" name="title" class="form-control"/>
                </div>

                <div class="text-left mb-3 mr-2">
                    <label for="image">Sélectionner une photo</label>
                    <input type="hidden" name="MAX_FILE_SIZE" value="250000"/>
                    <input type="file" id="image" name="image" class="form-control">

                </div>

                <div class="text-left mb-3 mr-2">
                    <label for="content">texte</label><br/>
                    <textarea id="content" name="content" class="form-control"></textarea>
                </div>
                <div class="text-left mb-3 mr-2">
                    <label for="city">ville</label><br/>
                    <input id="city" name="city" class="form-control">
                </div>
                <div class="text-left mb-3 mr-2">
                    <label for="tel">téléphone</label><br/>
                    <input id="tel" name="tel" class="form-control">
                </div>

                <div class="text-left mb-3 mr-2">
                    <label for="email">email</label><br/>
                    <input id="email" name="email" class="form-control">
                </div>
                <div class="text-left">
                    <button class="btn btn-success mt-2 mb-2" type="submit">Publier</button>
                </div>
            </form>
        </div>

{% endblock %}
