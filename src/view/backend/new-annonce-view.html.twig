{% extends "frontend/template.html.twig" %}

{% block head %}
    <meta charset="utf-8"/>
    <title> creer une annonce </title>

{% endblock %}

{% block body %}
    <div class="global-container">

        <div class="container container-white mt-3 mb-3 rounded pt-2 pb-2">
            <h2>créer une nouvelle annonce</h2>

            <form action="index.php" method="post">
                <div>
                    <input type="hidden" id="action" name="action" value="createAnnonce"/>
                </div>
                <div>
                    <label for="title">titre</label><br/>
                    <input type="text" id="title" name="title" class="form-control"/>
                </div>
                <div>
                    <label for="tel">téléphone</label><br/>
                    <input id="tel" name="tel" class="form-control">
                </div>
                <div>
                    <label for="content">texte</label><br/>
                    <textarea id="content" name="content" class="form-control"></textarea>
                </div>

                <div>
                    <button class="btn btn-success mt-2" type="submit">Publier</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
